<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_event_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_guest"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/recycler_guest_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"

        app:layout_constraintBottom_toBottomOf="@id/recycler_guest"
        app:layout_constraintEnd_toEndOf="@id/recycler_guest"
        app:layout_constraintStart_toStartOf="@id/recycler_guest" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/recycler_event"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/mb_request"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_guest"
        app:layout_constraintVertical_bias="0" />

    <ProgressBar
        android:id="@+id/recycler_event_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@id/recycler_event"
        app:layout_constraintEnd_toEndOf="@id/recycler_event"
        app:layout_constraintStart_toStartOf="@id/recycler_event"
        app:layout_constraintTop_toTopOf="@id/recycler_event" />

    <android.support.design.button.MaterialButton
        android:id="@+id/mb_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="request"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>